<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdoptApet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/AdoptApet.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="header-top">
        <div class="clearfix">
            <div class="top-left">
                <ul class="clearfix">
                    <li><span class="icon flaticon-map-marker"></span>lebanon ...</li>
                    <li>
                        <a href="tel:+12345678900">
                            <span class="icon flaticon-telephone-handle-silhouette"></span>
                            +(1) 234 567 8900
                        </a>
                    </li>
                    <li>
                        <a href="mailto:support@AdoptApet.com">
                            <span class="icon fa fa-envelope"></span>
                            support@adoubtApet.com
                        </a>
                    </li>
                </ul>
            </div>
            <div class="top-right clearfix">
                <div class="donate-box"><a href="donation.html" class="theme-btn btn-style-one">donate</a></div>
                <div class="social-icon">
                    <ul class="clearfix">
                        <a href="#"><span class="fab fa-twitter"></span></a>
                        <a href="#"><span class="fab fa-facebook-square"></span></a>
                        <a href="#"><span class="fab fa-instagram"></span></a>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="About">AboutUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="service">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="pets" asp-action="pet">Pets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="contact">Contact
                                Us</a>
                        </li>
                        <div class="navbar-brand-box">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                                &nbsp;&nbsp;Adopt<span style="color: #ff6e01;">A</span>Pet</a>
                        </div>
                        <li class="nav-item login">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="login">Log
                                In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="site-footer">
        <div class="footer-content">
            <div class="contact-info">
                <h3>Contact Us</h3>
                <p>Email: info@example.com</p>
                <p>Phone: +1-234-567-8901</p>
                <p>Address: 123 Street, City, Country</p>
            </div>
            <div class="social-media">
                <h3>Connect With Us</h3>
                <ul>
                    <li><a href="https://facebook.com">Facebook</a></li>
                    <li><a href="https://twitter.com">Twitter</a></li>
                    <li><a href="https://instagram.com">Instagram</a></li>
                    <li><a href="https://linkedin.com">LinkedIn</a></li>
                </ul>
            </div>
            <div class="description">
                <h3>About Us</h3>
                <p>We are passionate about connecting pets with loving homes and providing exceptional care. Our mission
                    is to create a harmonious bond between pets and families, ensuring a lifetime of happiness.</p>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2024 AdoptAPet.<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
